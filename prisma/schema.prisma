generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produtos {
  id        String   @id @default(uuid())
  nome      String
  grupo     String
  unidade   String
  preco     Float
  peso      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("produtos")
}

model Usuarios {
  id        String   @id @default(uuid())
  nome      String
  username  String
  password  String
  posicao   String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Pedidos Pedidos[]
  @@map("usuarios")
}

model Clientes {
  id              String   @id @default(uuid())
  tipoClientes    String
  nome            String
  nomeFantasia    String
  endereco        String
  bairro          String
  cidade          String
  cep             String
  telefone        String
  email           String
  nomeContato     String
  telefoneContato String
  cnpj            String
  desconto        Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())

  Pedidos Pedidos[]
  @@map("clientes")
}

model Pedidos {
  id         String @id @default(uuid())
  valorTotal Float
  pesoTotal  Float
  usuario_id String
  cliente_id String

  usuarios Usuarios @relation(fields: [usuario_id], references: [id])
  clientes Clientes @relation(fields: [cliente_id], references: [id])

  @@map("pedidos")
}

